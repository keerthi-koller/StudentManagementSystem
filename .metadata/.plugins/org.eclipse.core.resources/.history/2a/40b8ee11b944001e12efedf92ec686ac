package com.jsp.employeemanagementsystem.dto;

import jakarta.validation.constraints.Email;
import jakarta.validation.constraints.Max;
import jakarta.validation.constraints.Min;
import jakarta.validation.constraints.NotBlank;
import jakarta.validation.constraints.NotEmpty;
import jakarta.validation.constraints.NotNull;
import jakarta.validation.constraints.Pattern;

public class EmployeeRequest {
	@NotEmpty(message = "Employee First name should be present")
	private String empFirstName;
	
	@NotEmpty(message = "Employee Last name should be present")
	private String empLastName;
	
	@Min(value = 6000000000l, message = "Phone Number cannot start below `6` !!")
	@Max(value = 9999999999l, message = "Phone Number cannot be above `9999999999` !!")
	private long empPhNo;
	
	@NotBlank(message =  "Email cannot be blank")
	@Email(regexp = "[a-zA-Z0-9+_.-]+@[g][m][a][i][l]+.[c][o][m]", message = "invalid email--should be in the extension of '@gmail.com' ")
	private String empEmail;
	
	private double empSal;
	
	@Pattern(regexp = "^(?=.*[0-9](?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%^&+=])(?=\\$+$).{8,}$", message = "8 characters mandatory (1 upperCase, 1lowerCase, 1 special Character, 1 number)")
	private String empPwd;

	
	public String getEmpFirstName() {
		return empFirstName;
	}

	public void setEmpFirstName(String empFirstName) {
		this.empFirstName = empFirstName;
	}

	public String getEmpLastName() {
		return empLastName;
	}

	public void setEmpLastName(String empLastName) {
		this.empLastName = empLastName;
	}

	public long getEmpPhNo() {
		return empPhNo;
	}

	public void setEmpPhNo(long empPhNo) {
		this.empPhNo = empPhNo;
	}

	public String getEmpEmail() {
		return empEmail;
	}

	public void setEmpEmail(String empEmail) {
		this.empEmail = empEmail;
	}

	public double getEmpSal() {
		return empSal;
	}

	public void setEmpSal(double empSal) {
		this.empSal = empSal;
	}

	public String getEmpPwd() {
		return empPwd;
	}

	public void setEmpPwd(String empPwd) {
		this.empPwd = empPwd;
	}

}
